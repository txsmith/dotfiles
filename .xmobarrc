Config { font = "xft:Ubuntu Mono:size=13:Regular:antialias=true"
       , additionalFonts = ["xft:Hack:size=12:Bold:antialias=true", 
                             "xft:Ubuntu Mono:size=13:Regular:antialias=true"]
       , border = NoBorder
       , bgColor = "#2E3436"
       , fgColor = "#5E717A"
       , alpha = 255
       , position = Top
       , textOffset = 15
       , iconOffset = 9
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = True
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ 
                  Run DynNetwork ["-t", "<rx> KB/s : <tx> KB/s"] 10
                , Run Com "/home/thomas/.xmonad/battery.sh" [] "bat" 30
                , Run Date "%b %_d %H:%M" "date" 10
                , Run StdinReader
        ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{ <fn=2><fc=#5E717A><icon=.xmonad/icons/down.xbm/></fc><fc=#5E717A><icon=.xmonad/icons/up.xbm/></fc> %dynnetwork%  %bat%</fn>   <fn=1><fc=#20A294>%date%</fc></fn> " 
}
